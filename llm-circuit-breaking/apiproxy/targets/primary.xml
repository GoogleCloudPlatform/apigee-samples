<TargetEndpoint name="primary">
  <Description/>
  <FaultRules>
    <FaultRule name="LLMQuota">
      <Step>
        <Name>Q-LLM-Failover-Counter</Name>
      </Step>
      <Step>
        <Name>SC-Secondary</Name>
      </Step>
      <Step>
        <Name>AM-Secondary-Retry</Name>
      </Step>
      <Step>
        <Name>DC-Collect</Name>
      </Step>
      <Condition>error.status.code = 429 Or error.status.code GreaterThan 399</Condition>
    </FaultRule>
  </FaultRules>
  <PreFlow name="PreFlow">
    <Request>
      <Step>
        <Name>AM-Path-Suffix</Name>
      </Step>
    </Request>
    <Response/>
  </PreFlow>
  <PostFlow name="PostFlow">
    <Request/>
    <Response>
      <Step>
        <Name>AM-Primary</Name>
      </Step>
    </Response>
  </PostFlow>
  <Flows/>
  <HTTPTargetConnection>
    <Properties>
      <Property name="request.streaming.enabled">true</Property>
    </Properties>
    <!-- apigeelint disable=TD002 -->
    <URL>https://{propertyset.vertex_config.region_p1}-aiplatform.googleapis.com/v1/projects/{propertyset.vertex_config.project_p1}/locations/{propertyset.vertex_config.region_p1}/publishers/google/models/{request_model_id}</URL>
  </HTTPTargetConnection>
</TargetEndpoint>
