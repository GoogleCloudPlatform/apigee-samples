<SanitizeModelResponse async="false" continueOnError="true" enabled="true" name="SMR-SantizeModelResponse">
  <IgnoreUnresolvedVariables>true</IgnoreUnresolvedVariables>
  <DisplayName>SMR-SantizeModelResponse</DisplayName>
  <ModelArmor>
    <TemplateName>{modelArmorTemplate}</TemplateName>
  </ModelArmor>
  <LLMResponseSource>{response.event.current.content}</LLMResponseSource>
  <!-- Use the below settings if you do want to call a Model Armor policy on every event. -->
  <!-- <LLMResponseSource>{response_partial}</LLMResponseSource> -->
</SanitizeModelResponse>
