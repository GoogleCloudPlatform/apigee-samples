<ProxyEndpoint name="default">
  <Description/>
  <FaultRules/>
  <PreFlow name="PreFlow">
    <Request>
      <Step>
        <Name>CORS</Name>
      </Step>
      <Step>
        <Name>VA-VerifyKey</Name>
      </Step>
    </Request>
    <Response/>
  </PreFlow>
  <PostFlow name="PostFlow">
    <Request/>
    <Response/>
  </PostFlow>
  <Flows>
    <Flow name="listCustomers">
      <Description>Returns a list of customers.</Description>
      <Request>
        <Step>
          <Name>AM-ListCustomers</Name>
        </Step>
      </Request>
      <Response/>
      <Condition>((request.path MatchesPath "/v1/samples/adk-cymbal-retail/customers" or request.path MatchesPath "/v1/samples/adk-cymbal-retail/customers/")) and (request.verb = "GET")</Condition>
    </Flow>
    <Flow name="createCustomer">
      <Description>Creates a new customer.</Description>
      <Request>
        <Step>
          <Name>AM-CreateCustomer</Name>
        </Step>
      </Request>
      <Response/>
      <Condition>(proxy.pathsuffix MatchesPath "/") and (request.verb = "POST")</Condition>
    </Flow>
    <Flow name="getCustomer">
      <Description>Retrieves a specific customer by ID.</Description>
      <Request>
        <Step>
          <Name>EV-FetchID</Name>
        </Step>
        <Step>
          <Name>AM-GetCustomerById</Name>
        </Step>
      </Request>
      <Response/>
      <Condition>(proxy.pathsuffix MatchesPath "/{id}") and (request.verb = "GET")</Condition>
    </Flow>
    <Flow name="updateCustomer">
      <Description>Updates a specific customer by ID.</Description>
      <Request>
        <Step>
          <Name>EV-FetchID</Name>
        </Step>
      </Request>
      <Response>
        <Step>
          <Name>AM-SetNoContent</Name>
        </Step>
      </Response>
      <Condition>(proxy.pathsuffix MatchesPath "/{id}") and (request.verb = "PUT")</Condition>
    </Flow>
  </Flows>
  <HTTPProxyConnection>
    <BasePath>/v1/samples/adk-cymbal-retail/customers/</BasePath>
    <Properties/>
  </HTTPProxyConnection>
  <RouteRule name="noRoute">
    <Condition>request.verb = "PUT" or request.verb = "DELETE"</Condition>
  </RouteRule>
  <RouteRule name="default">
    <TargetEndpoint>default</TargetEndpoint>
  </RouteRule>
</ProxyEndpoint>
