<ProxyEndpoint name="default">
  <Description/>
  <FaultRules/>
  <PreFlow name="PreFlow">
    <Request>
      <Step>
        <Name>CORS</Name>
      </Step>
      <Step>
        <Name>VA-VerifyKey</Name>
      </Step>
    </Request>
    <Response/>
  </PreFlow>
  <PostFlow name="PostFlow">
    <Request/>
    <Response/>
  </PostFlow>
  <Flows>
    <Flow name="listOrders">
      <Description>Returns a list of orders.</Description>
      <Request>
        <Step>
          <Name>AM-ListOrders</Name>
        </Step>
      </Request>
      <Response/>
      <Condition>(proxy.pathsuffix MatchesPath "/") and (request.verb = "GET")</Condition>
    </Flow>
    <Flow name="createOrder">
      <Description>Creates a new order.</Description>
      <Request>
        <Step>
          <Name>AM-CreateOrder</Name>
        </Step>
      </Request>
      <Response/>
      <Condition>(proxy.pathsuffix MatchesPath "/") and (request.verb = "POST")</Condition>
    </Flow>
    <Flow name="getOrder">
      <Description>Retrieves a specific order by ID.</Description>
      <Request>
        <Step>
          <Name>EV-FetchID</Name>
        </Step>
        <Step>
          <Name>AM-GetOrderById</Name>
        </Step>
      </Request>
      <Response/>
      <Condition>(proxy.pathsuffix MatchesPath "/{id}") and (request.verb = "GET")</Condition>
    </Flow>
    <Flow name="updateOrder">
      <Description>Updates a specific order by ID.</Description>
      <Request>
        <Step>
          <Name>EV-FetchID</Name>
        </Step>
      </Request>
      <Response>
        <Step>
          <Name>AM-SetNoContent</Name>
        </Step>
      </Response>
      <Condition>(proxy.pathsuffix MatchesPath "/{id}") and (request.verb = "PUT")</Condition>
    </Flow>
  </Flows>
  <HTTPProxyConnection>
    <BasePath>/v1/samples/adk-cymbal-retail/orders/</BasePath>
    <Properties/>
  </HTTPProxyConnection>
  <RouteRule name="noRoute">
    <Condition>request.verb = "PUT" or request.verb = "DELETE"</Condition>
  </RouteRule>
  <RouteRule name="default">
    <TargetEndpoint>default</TargetEndpoint>
  </RouteRule>
</ProxyEndpoint>
