<ProxyEndpoint name="default">
    <Flows>
        <Flow name="generate-access-token">
            <!-- This policy flow is selected when the path exactly matches what's below -->
            <Condition>(proxy.pathsuffix MatchesPath "/token") and (request.verb = "POST")</Condition>
            <Request>
                <Step>
                    <Name>OAuth-GenerateToken</Name>
                </Step>
            </Request>
        </Flow>
        <Flow name="get-protected-resource">
            <Description/>
            <Request>
                <Step>
                    <Name>OAuth-VerifyAccessToken</Name>
                </Step>
            </Request>
            <Response>
                <Step>
                    <Name>AM-SuccessfulResponse</Name>
                </Step>
            </Response>
            <Condition>(proxy.pathsuffix MatchesPath "/resource") and (request.verb = "GET")</Condition>
        </Flow>
    </Flows>
    <HTTPProxyConnection>
        <!-- Add a base path to the proxy to distinguish from others in the environment -->
        <BasePath>/v1/samples/oauth-client-credentials</BasePath>
        <VirtualHost>secure</VirtualHost>
        <!-- Listen only on the HTTPS endpoint since OAuth 2.0 requires that -->
    </HTTPProxyConnection>
    <RouteRule name="NoRoute"/>
</ProxyEndpoint>